# [Usage]
#
# $ gem install gem_comet
# $ gem_comet init
# $ gem_comet release {version number, like as "1.2.3"}
# $ gem_comet changelog
# $ gem_comet versions

version: <%= config[:version] %>

release:
  base_branch: master
  release_branch: release
  version_file_path: '{Path of your version file}'
  changelog_file_path: CHANGELOG.md # optional
